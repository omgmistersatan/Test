#!/bin/bash
set -euo pipefail

# =============================
# Eric VM Manager - No ISO Tools Version
# =============================

# ===============================
# CORES E ESTILO
# ===============================
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly BLUE='\033[1;34m'
readonly CYAN='\033[1;36m'
readonly BOLD='\033[1m'
readonly NC='\033[0m' # No Color

# Function to display header
display_header() {
    clear
    echo -e "${CYAN}${BOLD}"
    cat << "EOF"
  _____ ____  ___ ____   __     ____  __  _    _  ____  _____ _____ 
 | ____|  _ \|_ _/ ___| \ \   / /  \/  | |  | |/ __ \|_   _|_   _|
 |  _| | |_) || | |      \ \ / /| |\/| | |__| | |  | | | |   | |  
 | |___|  _ < | | |___    \ V / | |  | |  __  | |__| | | |   | |  
 |_____|_| \_\___\____|    \_/  |_|  |_|_|  |_|\____/  |_|   |_|  
                                                                    
               MANAGER v3.0 - No ISO Tools Required
EOF
    echo -e "${NC}"
    echo -e "${CYAN}========================================================================${NC}"
    echo
}

# Function to display colored output
print_status() {
    local type=$1
    local message=$2
    
    case $type in
        "INFO") echo -e "${BLUE}[INFO]${NC} $message" ;;
        "WARN") echo -e "${YELLOW}[WARN]${NC} $message" ;;
        "ERROR") echo -e "${RED}[ERROR]${NC} $message" ;;
        "SUCCESS") echo -e "${GREEN}[SUCCESS]${NC} $message" ;;
        "INPUT") echo -e "${CYAN}[INPUT]${NC} $message" ;;
        *) echo "[$type] $message" ;;
    esac
}

# Function to validate input
validate_input() {
    local type=$1
    local value=$2
    
    case $type in
        "number")
            if ! [[ "$value" =~ ^[0-9]+$ ]]; then
                print_status "ERROR" "Must be a number"
                return 1
            fi
            ;;
        "size")
            if ! [[ "$value" =~ ^[0-9]+[GgMm]$ ]]; then
                print_status "ERROR" "Must be a size with unit (e.g., 100G, 512M)"
                return 1
            fi
            ;;
        "port")
            if ! [[ "$value" =~ ^[0-9]+$ ]] || [ "$value" -lt 23 ] || [ "$value" -gt 65535 ]; then
                print_status "ERROR" "Must be a valid port number (23-65535)"
                return 1
            fi
            ;;
        "name")
            if ! [[ "$value" =~ ^[a-zA-Z0-9_-]+$ ]]; then
                print_status "ERROR" "VM name can only contain letters, numbers, hyphens, and underscores"
                return 1
            fi
            ;;
        "username")
            if ! [[ "$value" =~ ^[a-z_][a-z0-9_-]*$ ]]; then
                print_status "ERROR" "Username must start with a letter or underscore, and contain only letters, numbers, hyphens, and underscores"
                return 1
            fi
            ;;
    esac
    return 0
}

# Function to validate port forward format
validate_port_forward() {
    local forward="$1"
    
    if ! [[ "$forward" =~ ^[0-9]+:[0-9]+$ ]]; then
        print_status "ERROR" "Invalid port forward format: $forward"
        print_status "INFO" "Format should be: HOST_PORT:GUEST_PORT"
        return 1
    fi
    
    IFS=':' read -r host_port guest_port <<< "$forward"
    
    if [[ "$host_port" -lt 1024 ]] && [[ "$EUID" -ne 0 ]]; then
        print_status "WARN" "Port $host_port below 1024 may require root privileges"
    fi
    
    if [[ "$host_port" -gt 65535 ]] || [[ "$guest_port" -gt 65535 ]]; then
        print_status "ERROR" "Port numbers must be between 1 and 65535"
        return 1
    fi
    
    return 0
}

# Function to create cloud-init seed image without any external tools
create_cloud_init_seed() {
    local seed_file="$1"
    local user_data="$2"
    local meta_data="$3"
    
    print_status "INFO" "Creating cloud-init seed without external tools..."
    
    # Create a simple seed file with cloud-init data
    # We'll create a directory structure and use it directly
    local seed_dir="${seed_file%.*}.d"
    mkdir -p "$seed_dir"
    
    # Create user-data and meta-data files
    echo "$user_data" > "$seed_dir/user-data"
    echo "$meta_data" > "$seed_dir/meta-data"
    
    # Create network-config file (optional)
    cat > "$seed_dir/network-config" <<EOF
version: 2
ethernets:
  eth0:
    dhcp4: true
    dhcp6: false
EOF
    
    # Create a simple script to inject cloud-init data
    cat > "$seed_dir/inject-cloud-init.sh" <<'EOF'
#!/bin/bash
# This script would be run inside the VM to apply cloud-init config
# For now, we'll just create the seed file structure
echo "Cloud-init configuration ready"
EOF
    chmod +x "$seed_dir/inject-cloud-init.sh"
    
    # Alternative: Create a FAT filesystem using dd and loop device if possible
    # But for simplicity, we'll just use the directory
    
    # Create a tar archive as our "seed" (many cloud images can use tar)
    tar -cf "$seed_file" -C "$seed_dir" .
    
    # Clean up directory
    rm -rf "$seed_dir"
    
    if [ -f "$seed_file" ]; then
        print_status "SUCCESS" "Cloud-init seed created: $seed_file"
        return 0
    else
        print_status "ERROR" "Failed to create cloud-init seed"
        return 1
    fi
}

# Function to create cloud-init configuration for direct injection
create_cloud_init_config() {
    local vm_name="$1"
    local hostname="$2"
    local username="$3"
    local password="$4"
    
    # Create user-data
    local user_data="#cloud-config
hostname: $hostname
manage_etc_hosts: true
users:
  - name: $username
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    # Password hash for 'password' - you might want to generate this properly
    passwd: $(echo -n "$password" | openssl passwd -1 -stdin 2>/dev/null || echo '$1$salt$hashed_password')
ssh_pwauth: true
disable_root: false
chpasswd:
  expire: false
package_update: true
packages:
  - curl
  - wget
  - net-tools
  - openssh-server
runcmd:
  - [systemctl, enable, ssh]
  - [systemctl, start, ssh]
  - echo \"Welcome to $hostname\" > /etc/motd
  - echo \"$username:$password\" | chpasswd
  - echo \"root:$password\" | chpasswd
"
    
    # Create meta-data
    local meta_data="instance-id: $vm_name
local-hostname: $hostname
"
    
    echo "$user_data"
    echo "---"
    echo "$meta_data"
}

# Function to install minimal dependencies
install_dependencies() {
    print_status "INFO" "Checking and installing minimal dependencies..."
    
    # Check if running as root
    if [ "$EUID" -ne 0 ]; then
        print_status "WARN" "Please run with sudo to install dependencies"
        return 1
    fi
    
    # Detect distribution
    if command -v apt-get >/dev/null 2>&1; then
        # Debian/Ubuntu - minimal install
        apt-get update
        apt-get install -y qemu-system-x86 qemu-utils wget
    elif command -v dnf >/dev/null 2>&1; then
        # Fedora/RHEL
        dnf install -y qemu-kvm qemu-img wget
    elif command -v yum >/dev/null 2>&1; then
        # CentOS/RHEL (old)
        yum install -y qemu-kvm qemu-img wget
    elif command -v pacman >/dev/null 2>&1; then
        # Arch Linux
        pacman -S --noconfirm qemu qemu-arch-extra wget
    else
        print_status "ERROR" "Unsupported distribution. Please install manually:"
        print_status "INFO" "Required: qemu-system-x86 OR qemu-kvm"
        print_status "INFO" "Required: qemu-img"
        print_status "INFO" "Optional but recommended: wget"
        return 1
    fi
    
    print_status "SUCCESS" "Minimal dependencies installed"
}

# Function to check minimal dependencies
check_dependencies() {
    local deps=("qemu-system-x86_64" "qemu-img")
    local missing_deps=()
    
    for dep in "${deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then
            missing_deps+=("$dep")
        fi
    done
    
    if [ ${#missing_deps[@]} -ne 0 ]; then
        print_status "ERROR" "Missing essential dependencies: ${missing_deps[*]}"
        print_status "INFO" "QEMU is required to run virtual machines"
        
        read -p "$(print_status "INPUT" "Install minimal QEMU now? (y/N): ")" install_choice
        if [[ "$install_choice" =~ ^[Yy]$ ]]; then
            if ! install_dependencies; then
                print_status "ERROR" "Failed to install dependencies. Please install manually."
                exit 1
            fi
        else
            print_status "INFO" "Please install QEMU manually and run the script again"
            exit 1
        fi
    fi
    
    # Check for wget (optional but recommended)
    if ! command -v wget &> /dev/null; then
        print_status "WARN" "wget not found - downloading images will not work"
        print_status "INFO" "You'll need to manually download cloud images"
    fi
}

# Function to cleanup temporary files
cleanup() {
    if [ -f "user-data" ]; then rm -f "user-data"; fi
    if [ -f "meta-data" ]; then rm -f "meta-data"; fi
    if [ -f "network-config" ]; then rm -f "network-config"; fi
}

# Function to get all VM configurations
get_vm_list() {
    find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null | sort
}

# Function to load VM configuration
load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    
    if [[ -f "$config_file" ]]; then
        # Clear previous variables
        unset VM_NAME OS_TYPE CODENAME IMG_URL HOSTNAME USERNAME PASSWORD
        unset DISK_SIZE MEMORY CPUS SSH_PORT GUI_MODE PORT_FORWARDS IMG_FILE SEED_FILE CREATED
        
        source "$config_file"
        return 0
    else
        print_status "ERROR" "Configuration for VM '$vm_name' not found"
        return 1
    fi
}

# Function to save VM configuration
save_vm_config() {
    local config_file="$VM_DIR/$VM_NAME.conf"
    
    cat > "$config_file" <<EOF
VM_NAME="$VM_NAME"
OS_TYPE="$OS_TYPE"
CODENAME="$CODENAME"
IMG_URL="$IMG_URL"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
DISK_SIZE="$DISK_SIZE"
MEMORY="$MEMORY"
CPUS="$CPUS"
SSH_PORT="$SSH_PORT"
GUI_MODE="$GUI_MODE"
PORT_FORWARDS="$PORT_FORWARDS"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
CREATED="$CREATED"
EOF
    
    print_status "SUCCESS" "Configuration saved to $config_file"
}

# Function to create new VM
create_new_vm() {
    print_status "INFO" "Creating a new VM"
    
    # OS Selection - limited to Ubuntu/Debian which have good cloud images
    print_status "INFO" "Select an OS to set up:"
    echo "  1) Ubuntu 22.04 LTS"
    echo "  2) Ubuntu 24.04 LTS"
    echo "  3) Debian 11"
    echo "  4) Debian 12"
    
    while true; do
        read -p "$(print_status "INPUT" "Enter your choice (1-4): ")" choice
        case $choice in
            1)
                OS_TYPE="ubuntu"
                CODENAME="jammy"
                IMG_URL="https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
                DEFAULT_HOSTNAME="ubuntu22"
                DEFAULT_USERNAME="ubuntu"
                DEFAULT_PASSWORD="ubuntu"
                break
                ;;
            2)
                OS_TYPE="ubuntu"
                CODENAME="noble"
                IMG_URL="https://cloud-images.ubuntu.com/noble/current/noble-server-cloudimg-amd64.img"
                DEFAULT_HOSTNAME="ubuntu24"
                DEFAULT_USERNAME="ubuntu"
                DEFAULT_PASSWORD="ubuntu"
                break
                ;;
            3)
                OS_TYPE="debian"
                CODENAME="bullseye"
                IMG_URL="https://cloud.debian.org/images/cloud/bullseye/latest/debian-11-generic-amd64.qcow2"
                DEFAULT_HOSTNAME="debian11"
                DEFAULT_USERNAME="debian"
                DEFAULT_PASSWORD="debian"
                break
                ;;
            4)
                OS_TYPE="debian"
                CODENAME="bookworm"
                IMG_URL="https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2"
                DEFAULT_HOSTNAME="debian12"
                DEFAULT_USERNAME="debian"
                DEFAULT_PASSWORD="debian"
                break
                ;;
            *)
                print_status "ERROR" "Invalid selection. Try again."
                ;;
        esac
    done

    # Custom Inputs with validation
    while true; do
        read -p "$(print_status "INPUT" "Enter VM name (default: $DEFAULT_HOSTNAME): ")" VM_NAME
        VM_NAME="${VM_NAME:-$DEFAULT_HOSTNAME}"
        if validate_input "name" "$VM_NAME"; then
            # Check if VM name already exists
            if [[ -f "$VM_DIR/$VM_NAME.conf" ]]; then
                print_status "ERROR" "VM with name '$VM_NAME' already exists"
            else
                break
            fi
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "Enter hostname (default: $VM_NAME): ")" HOSTNAME
        HOSTNAME="${HOSTNAME:-$VM_NAME}"
        if validate_input "name" "$HOSTNAME"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "Enter username (default: $DEFAULT_USERNAME): ")" USERNAME
        USERNAME="${USERNAME:-$DEFAULT_USERNAME}"
        if validate_input "username" "$USERNAME"; then
            break
        fi
    done

    while true; do
        read -s -p "$(print_status "INPUT" "Enter password (default: $DEFAULT_PASSWORD): ")" PASSWORD
        PASSWORD="${PASSWORD:-$DEFAULT_PASSWORD}"
        echo
        if [ -n "$PASSWORD" ]; then
            break
        else
            print_status "ERROR" "Password cannot be empty"
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "Disk size (default: 20G): ")" DISK_SIZE
        DISK_SIZE="${DISK_SIZE:-20G}"
        if validate_input "size" "$DISK_SIZE"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "Memory in MB (default: 2048): ")" MEMORY
        MEMORY="${MEMORY:-2048}"
        if validate_input "number" "$MEMORY"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "Number of CPUs (default: 2): ")" CPUS
        CPUS="${CPUS:-2}"
        if validate_input "number" "$CPUS"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "SSH Port (default: 2222): ")" SSH_PORT
        SSH_PORT="${SSH_PORT:-2222}"
        if validate_input "port" "$SSH_PORT"; then
            # Check if port is already in use
            if command -v ss >/dev/null 2>&1; then
                if ss -tln 2>/dev/null | grep -q ":$SSH_PORT "; then
                    print_status "ERROR" "Port $SSH_PORT is already in use"
                    continue
                fi
            fi
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "Enable GUI mode? (y/n, default: n): ")" gui_input
        GUI_MODE=false
        gui_input="${gui_input:-n}"
        if [[ "$gui_input" =~ ^[Yy]$ ]]; then 
            GUI_MODE=true
            break
        elif [[ "$gui_input" =~ ^[Nn]$ ]]; then
            break
        else
            print_status "ERROR" "Please answer y or n"
        fi
    done

    # Additional network options
    while true; do
        read -p "$(print_status "INPUT" "Additional port forwards (e.g., 8080:80, press Enter for none): ")" PORT_FORWARDS
        
        if [[ -z "$PORT_FORWARDS" ]]; then
            break
        fi
        
        # Validate each port forward
        local valid=true
        IFS=',' read -ra forwards <<< "$PORT_FORWARDS"
        for forward in "${forwards[@]}"; do
            forward=$(echo "$forward" | tr -d '[:space:]')
            if ! validate_port_forward "$forward"; then
                valid=false
                break
            fi
        done
        
        if $valid; then
            break
        else
            print_status "ERROR" "Please fix the port forward format"
        fi
    done

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.tar"
    CREATED="$(date)"

    # Download and setup VM image
    setup_vm_image
    
    # Save configuration
    save_vm_config
}

# Function to setup VM image
setup_vm_image() {
    print_status "INFO" "Setting up VM image..."
    
    # Create VM directory if it doesn't exist
    mkdir -p "$VM_DIR"
    
    # Check if image already exists
    if [[ -f "$IMG_FILE" ]]; then
        print_status "INFO" "Image file already exists. Skipping download."
    elif command -v wget >/dev/null 2>&1; then
        print_status "INFO" "Downloading image from $IMG_URL..."
        if wget --progress=bar:force "$IMG_URL" -O "$IMG_FILE.tmp" 2>/dev/null; then
            mv "$IMG_FILE.tmp" "$IMG_FILE"
            print_status "SUCCESS" "Image downloaded successfully"
        else
            print_status "ERROR" "Failed to download image from $IMG_URL"
            print_status "INFO" "Please download manually and place at: $IMG_FILE"
            print_status "INFO" "Or install wget and try again"
            exit 1
        fi
    else
        print_status "ERROR" "wget not found. Cannot download image."
        print_status "INFO" "Please download the image manually:"
        print_status "INFO" "URL: $IMG_URL"
        print_status "INFO" "Save as: $IMG_FILE"
        print_status "INFO" "Then run the script again."
        exit 1
    fi
    
    # Resize the disk image if needed
    print_status "INFO" "Preparing disk image..."
    if ! qemu-img resize "$IMG_FILE" "$DISK_SIZE" 2>/dev/null; then
        print_status "WARN" "Creating new image with specified size..."
        # Create a new image with the specified size
        rm -f "$IMG_FILE"
        qemu-img create -f qcow2 "$IMG_FILE" "$DISK_SIZE"
    fi

    # Create cloud-init configuration
    print_status "INFO" "Creating cloud-init configuration..."
    
    # Generate user-data
    cat > user-data <<EOF
#cloud-config
hostname: $HOSTNAME
manage_etc_hosts: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
ssh_pwauth: true
disable_root: false
chpasswd:
  expire: false
package_update: true
packages:
  - curl
  - wget
  - net-tools
  - openssh-server
runcmd:
  - [systemctl, enable, ssh]
  - [systemctl, start, ssh]
  - echo "Welcome to $HOSTNAME" > /etc/motd
final_message: "System ready! Login with $USERNAME / $PASSWORD"
EOF

    # Create meta-data
    cat > meta-data <<EOF
instance-id: $VM_NAME
local-hostname: $HOSTNAME
EOF

    # Create network-config
    cat > network-config <<EOF
version: 2
ethernets:
  eth0:
    dhcp4: true
    dhcp6: false
EOF

    # Create seed file using tar (no external tools needed)
    print_status "INFO" "Creating cloud-init seed file..."
    tar -cf "$SEED_FILE" user-data meta-data network-config 2>/dev/null
    
    if [ -f "$SEED_FILE" ]; then
        print_status "SUCCESS" "VM '$VM_NAME' created successfully."
        print_status "INFO" "Note: Password will need to be set manually on first login"
        print_status "INFO" "Use 'sudo passwd $USERNAME' to set password after boot"
    else
        print_status "ERROR" "Failed to create seed file"
        exit 1
    fi
}

# Function to start a VM (without KVM)
start_vm() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        print_status "INFO" "Starting VM: $vm_name"
        print_status "INFO" "SSH: ssh -p $SSH_PORT $USERNAME@localhost"
        print_status "WARN" "First login: Use 'sudo passwd $USERNAME' to set password"
        print_status "WARN" "Cloud-init will run on first boot to configure system"
        
        # Check if image file exists
        if [[ ! -f "$IMG_FILE" ]]; then
            print_status "ERROR" "VM image file not found: $IMG_FILE"
            return 1
        fi
        
        # Check if seed file exists, recreate if not
        if [[ ! -f "$SEED_FILE" ]]; then
            print_status "WARN" "Seed file not found, recreating..."
            
            # Recreate cloud-init files
            cat > user-data <<EOF
#cloud-config
hostname: $HOSTNAME
manage_etc_hosts: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
ssh_pwauth: true
disable_root: false
chpasswd:
  expire: false
package_update: true
packages:
  - curl
  - wget
  - net-tools
  - openssh-server
runcmd:
  - [systemctl, enable, ssh]
  - [systemctl, start, ssh]
  - echo "Welcome to $HOSTNAME" > /etc/motd
EOF

            cat > meta-data <<EOF
instance-id: $VM_NAME
local-hostname: $HOSTNAME
EOF

            cat > network-config <<EOF
version: 2
ethernets:
  eth0:
    dhcp4: true
    dhcp6: false
EOF
            
            tar -cf "$SEED_FILE" user-data meta-data network-config 2>/dev/null
        fi
        
        # CORREÇÃO AQUI: Formato correto para hostfwd
        # Deve ser: hostfwd=tcp::[PORTA_HOST]-:[PORTA_GUEST]
        # Exemplo: hostfwd=tcp::2222-:22
        
        # Base QEMU command without KVM
        local qemu_cmd=(
            qemu-system-x86_64
            -m "$MEMORY"
            -smp "$CPUS"
            -cpu qemu64
            -drive "file=$IMG_FILE,format=qcow2,if=virtio"
            -boot order=c
            -netdev "user,id=n0,hostfwd=tcp::$SSH_PORT-:22"  # CORREÇÃO: adicionado :22 para porta SSH
            -device virtio-net-pci,netdev=n0
            -machine pc,accel=tcg
        )

        # Add seed file if it exists (as a CD-ROM)
        if [ -f "$SEED_FILE" ]; then
            qemu_cmd+=(-drive "file=$SEED_FILE,format=raw,if=virtio,readonly=on")
            print_status "INFO" "Cloud-init seed attached"
        fi

        # Add port forwards if specified
        if [[ -n "$PORT_FORWARDS" ]]; then
            IFS=',' read -ra forwards <<< "$PORT_FORWARDS"
            local forward_index=1
            for forward in "${forwards[@]}"; do
                # Remove espaços em branco
                forward=$(echo "$forward" | tr -d '[:space:]')
                
                if validate_port_forward "$forward"; then
                    IFS=':' read -r host_port guest_port <<< "$forward"
                    qemu_cmd+=(-device "virtio-net-pci,netdev=n$forward_index")
                    qemu_cmd+=(-netdev "user,id=n$forward_index,hostfwd=tcp::$host_port-:$guest_port")
                    print_status "INFO" "Port forward: $host_port -> $guest_port"
                    ((forward_index++))
                else
                    print_status "ERROR" "Skipping invalid port forward: $forward"
                fi
            done
        fi

        # Add GUI or console mode
        if [[ "$GUI_MODE" == true ]]; then
            qemu_cmd+=(-vga std -display sdl)
        else
            qemu_cmd+=(-nographic -serial mon:stdio)
        fi

        # Add some performance improvements for non-KVM
        qemu_cmd+=(
            -device virtio-balloon-pci
            -object rng-random,filename=/dev/urandom,id=rng0
            -device virtio-rng-pci,rng=rng0
        )

        print_status "INFO" "Starting QEMU..."
        echo -e "${YELLOW}Command:${NC}"
        echo "${qemu_cmd[@]}"
        echo
        
        # Execute QEMU
        if ! "${qemu_cmd[@]}"; then
            print_status "ERROR" "Failed to start QEMU"
            return 1
        fi
        
        print_status "INFO" "VM $vm_name has been shut down"
    fi
}

# Function to delete a VM
delete_vm() {
    local vm_name=$1
    
    print_status "WARN" "This will permanently delete VM '$vm_name' and all its data!"
    read -p "$(print_status "INPUT" "Are you sure? (y/N): ")" -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        if load_vm_config "$vm_name"; then
            rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$vm_name.conf"
            print_status "SUCCESS" "VM '$vm_name' has been deleted"
        fi
    else
        print_status "INFO" "Deletion cancelled"
    fi
}

# Function to show VM info
show_vm_info() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        echo
        print_status "INFO" "VM Information: $vm_name"
        echo "=========================================="
        echo -e "OS: ${CYAN}$OS_TYPE${NC}"
        echo -e "Hostname: $HOSTNAME"
        echo -e "Username: $USERNAME"
        echo -e "Password: $PASSWORD"
        echo -e "SSH Port: ${GREEN}$SSH_PORT${NC}"
        echo -e "Memory: $MEMORY MB"
        echo -e "CPUs: $CPUS"
        echo -e "Disk: $DISK_SIZE"
        echo -e "GUI Mode: $GUI_MODE"
        echo -e "Port Forwards: ${PORT_FORWARDS:-None}"
        echo -e "Created: $CREATED"
        echo -e "Image File: $IMG_FILE"
        echo -e "Seed File: $SEED_FILE"
        echo "=========================================="
        echo
        read -p "$(print_status "INPUT" "Press Enter to continue...")"
    fi
}

# Function to check if VM is running
is_vm_running() {
    local vm_name=$1
    if pgrep -f "qemu-system-x86_64.*$vm_name" >/dev/null; then
        return 0
    else
        return 1
    fi
}

# Function to stop a running VM
stop_vm() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            print_status "INFO" "Stopping VM: $vm_name"
            pkill -f "qemu-system-x86_64.*$IMG_FILE"
            sleep 2
            if is_vm_running "$vm_name"; then
                print_status "WARN" "VM did not stop gracefully, forcing termination..."
                pkill -9 -f "qemu-system-x86_64.*$IMG_FILE"
            fi
            print_status "SUCCESS" "VM $vm_name stopped"
        else
            print_status "INFO" "VM $vm_name is not running"
        fi
    fi
}

# Function to edit VM configuration
edit_vm_config() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        print_status "INFO" "Editing VM: $vm_name"
        
        while true; do
            echo "What would you like to edit?"
            echo "  1) Hostname"
            echo "  2) Username"
            echo "  3) Password"
            echo "  4) SSH Port"
            echo "  5) GUI Mode"
            echo "  6) Port Forwards"
            echo "  7) Memory (RAM)"
            echo "  8) CPU Count"
            echo "  9) Disk Size"
            echo "  0) Back to main menu"
            
            read -p "$(print_status "INPUT" "Enter your choice: ")" edit_choice
            
            case $edit_choice in
                1)
                    while true; do
                        read -p "$(print_status "INPUT" "Enter new hostname (current: $HOSTNAME): ")" new_hostname
                        new_hostname="${new_hostname:-$HOSTNAME}"
                        if validate_input "name" "$new_hostname"; then
                            HOSTNAME="$new_hostname"
                            break
                        fi
                    done
                    ;;
                2)
                    while true; do
                        read -p "$(print_status "INPUT" "Enter new username (current: $USERNAME): ")" new_username
                        new_username="${new_username:-$USERNAME}"
                        if validate_input "username" "$new_username"; then
                            USERNAME="$new_username"
                            break
                        fi
                    done
                    ;;
                3)
                    while true; do
                        read -s -p "$(print_status "INPUT" "Enter new password (current: ****): ")" new_password
                        new_password="${new_password:-$PASSWORD}"
                        echo
                        if [ -n "$new_password" ]; then
                            PASSWORD="$new_password"
                            break
                        else
                            print_status "ERROR" "Password cannot be empty"
                        fi
                    done
                    ;;
                4)
                    while true; do
                        read -p "$(print_status "INPUT" "Enter new SSH port (current: $SSH_PORT): ")" new_ssh_port
                        new_ssh_port="${new_ssh_port:-$SSH_PORT}"
                        if validate_input "port" "$new_ssh_port"; then
                            # Check if port is already in use
                            if command -v ss >/dev/null 2>&1; then
                                if [ "$new_ssh_port" != "$SSH_PORT" ] && ss -tln 2>/dev/null | grep -q ":$new_ssh_port "; then
                                    print_status "ERROR" "Port $new_ssh_port is already in use"
                                    continue
                                fi
                            fi
                            SSH_PORT="$new_ssh_port"
                            break
                        fi
                    done
                    ;;
                5)
                    while true; do
                        read -p "$(print_status "INPUT" "Enable GUI mode? (y/n, current: $GUI_MODE): ")" gui_input
                        gui_input="${gui_input:-}"
                        if [[ "$gui_input" =~ ^[Yy]$ ]]; then 
                            GUI_MODE=true
                            break
                        elif [[ "$gui_input" =~ ^[Nn]$ ]]; then
                            GUI_MODE=false
                            break
                        elif [ -z "$gui_input" ]; then
                            # Keep current value if user just pressed Enter
                            break
                        else
                            print_status "ERROR" "Please answer y or n"
                        fi
                    done
                    ;;
                6)
                    while true; do
                        read -p "$(print_status "INPUT" "Additional port forwards (current: ${PORT_FORWARDS:-None}): ")" new_port_forwards
                        
                        if [[ -z "$new_port_forwards" ]]; then
                            PORT_FORWARDS=""
                            break
                        fi
                        
                        # Validate each port forward
                        local valid=true
                        IFS=',' read -ra forwards <<< "$new_port_forwards"
                        for forward in "${forwards[@]}"; do
                            forward=$(echo "$forward" | tr -d '[:space:]')
                            if ! validate_port_forward "$forward"; then
                                valid=false
                                break
                            fi
                        done
                        
                        if $valid; then
                            PORT_FORWARDS="$new_port_forwards"
                            break
                        else
                            print_status "ERROR" "Please fix the port forward format"
                        fi
                    done
                    ;;
                7)
                    while true; do
                        read -p "$(print_status "INPUT" "Enter new memory in MB (current: $MEMORY): ")" new_memory
                        new_memory="${new_memory:-$MEMORY}"
                        if validate_input "number" "$new_memory"; then
                            MEMORY="$new_memory"
                            break
                        fi
                    done
                    ;;
                8)
                    while true; do
                        read -p "$(print_status "INPUT" "Enter new CPU count (current: $CPUS): ")" new_cpus
                        new_cpus="${new_cpus:-$CPUS}"
                        if validate_input "number" "$new_cpus"; then
                            CPUS="$new_cpus"
                            break
                        fi
                    done
                    ;;
                9)
                    while true; do
                        read -p "$(print_status "INPUT" "Enter new disk size (current: $DISK_SIZE): ")" new_disk_size
                        new_disk_size="${new_disk_size:-$DISK_SIZE}"
                        if validate_input "size" "$new_disk_size"; then
                            DISK_SIZE="$new_disk_size"
                            break
                        fi
                    done
                    ;;
                0)
                    return 0
                    ;;
                *)
                    print_status "ERROR" "Invalid selection"
                    continue
                    ;;
            esac
            
            # Recreate seed image with new configuration if user/password/hostname changed
            if [[ "$edit_choice" -eq 1 || "$edit_choice" -eq 2 || "$edit_choice" -eq 3 ]]; then
                print_status "INFO" "Updating cloud-init configuration..."
                
                # Recreate cloud-init files
                cat > user-data <<EOF
#cloud-config
hostname: $HOSTNAME
manage_etc_hosts: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
ssh_pwauth: true
disable_root: false
chpasswd:
  expire: false
package_update: true
packages:
  - curl
  - wget
  - net-tools
  - openssh-server
runcmd:
  - [systemctl, enable, ssh]
  - [systemctl, start, ssh]
  - echo "Welcome to $HOSTNAME" > /etc/motd
EOF

                cat > meta-data <<EOF
instance-id: $VM_NAME
local-hostname: $HOSTNAME
EOF

                cat > network-config <<EOF
version: 2
ethernets:
  eth0:
    dhcp4: true
    dhcp6: false
EOF
                
                tar -cf "$SEED_FILE" user-data meta-data network-config 2>/dev/null
            fi
            
            # Save configuration
            save_vm_config
            
            read -p "$(print_status "INPUT" "Continue editing? (y/N): ")" continue_editing
            if [[ ! "$continue_editing" =~ ^[Yy]$ ]]; then
                break
            fi
        done
    fi
}

# Main menu function
main_menu() {
    while true; do
        display_header
        
        local vms=($(get_vm_list))
        local vm_count=${#vms[@]}
        
        if [ $vm_count -gt 0 ]; then
            print_status "INFO" "Found $vm_count existing VM(s):"
            for i in "${!vms[@]}"; do
                local status="Stopped"
                if is_vm_running "${vms[$i]}"; then
                    status="${GREEN}Running${NC}"
                fi
                printf "  %2d) %s (%s)\n" $((i+1)) "${vms[$i]}" "$status"
            done
            echo
        fi
        
        echo "Main Menu:"
        echo "  1) Create a new VM"
        if [ $vm_count -gt 0 ]; then
            echo "  2) Start a VM"
            echo "  3) Stop a VM"
            echo "  4) Show VM info"
            echo "  5) Edit VM configuration"
            echo "  6) Delete a VM"
        fi
        echo "  7) Install/Check Dependencies"
        echo "  0) Exit"
        echo
        
        read -p "$(print_status "INPUT" "Enter your choice: ")" choice
        
        case $choice in
            1)
                create_new_vm
                ;;
            2)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "Enter VM number to start: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        start_vm "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "Invalid selection"
                    fi
                fi
                ;;
            3)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "Enter VM number to stop: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        stop_vm "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "Invalid selection"
                    fi
                fi
                ;;
            4)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "Enter VM number to show info: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        show_vm_info "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "Invalid selection"
                    fi
                fi
                ;;
            5)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "Enter VM number to edit: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        edit_vm_config "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "Invalid selection"
                    fi
                fi
                ;;
            6)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "Enter VM number to delete: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        delete_vm "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "Invalid selection"
                    fi
                fi
                ;;
            7)
                print_status "INFO" "Installing/Checking dependencies..."
                if check_dependencies; then
                    print_status "SUCCESS" "All dependencies are installed"
                fi
                ;;
            0)
                print_status "INFO" "Goodbye!"
                exit 0
                ;;
            *)
                print_status "ERROR" "Invalid option"
                ;;
        esac
        
        read -p "$(print_status "INPUT" "Press Enter to continue...")"
    done
}

# Set trap to cleanup on exit
trap cleanup EXIT

# Initialize paths
VM_DIR="${VM_DIR:-$HOME/vms}"
mkdir -p "$VM_DIR"

# Check minimal dependencies
check_dependencies

# Start the main menu
main_menu
